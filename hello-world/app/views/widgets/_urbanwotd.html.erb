<h3>Urban Word of the Day</h3>
<h5><%= Time.now.strftime("%B %d, %Y") %></h5>
<% urban_page = Nokogiri::HTML(RestClient.get("http://www.urbandictionary.com/")) %>
<div>Word: <%= urban_page.css(".word")[0].text.capitalize %></div>
<div>Definition: <%= urban_page.css(".meaning")[0].text %></div>
<div>Example: <%= urban_page.css(".example")[0].text %></div>
